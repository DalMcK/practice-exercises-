// Function to show the content of an array
function showArrayContent(array) {
  console.log("The content of the array is: " + array);
}

// Function to find the maximum value in an array
function findMaxValue(array) {
  var max = array[0];
  
  for (var i = 1; i < array.length; i++) {
    if (array[i] > max) {
      max = array[i];
    }
  }
  
  console.log("The max value in the array is: " + max);
}

// Sample array
var array = [10, 2, 3, 4, 7];

// Call the functions
showArrayContent(array);
findMaxValue(array);
